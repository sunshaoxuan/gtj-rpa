{
  "bot": {
    "name": "AirHost房源同步RPA",
    "classType": "",
    "strategies": [
      {
        "type": "CycleStrategy",
        "name": "每小时执行一次，连续10年",
        "cycleType": "DAY",
        "cycleInteval": 1,
        "frequencyType": "HOUR",
        "cycleBeginTime": "2022-09-15 00:00:00",
        "cycleEndTime": "2032-09-14 23:59:59",
        "startTimeInADay": "00:00:00",
        "cycleInADay": 1,
        "timeInCycle": "99,01"
      }
    ],
    "jobs": [
      {
        "id": "LogInAirHost",
        "showName": "登录",
        "type": "UserPasswordLoginAction",
        "error": "break",
        "context": {
          "url": "https://cloud.airhost.co/accounts/sign_in",
          "loadPageAfterLogin": "https://cloud.airhost.co/en/dashboard",
          "username": "$AIRHOST_MANAGE_USERNAME$",
          "password": "$AIRHOST_MANAGE_PASSWORD$"
        }
      },
      {
        "id": "FetchHouseData",
        "showName": "获取房源数据",
        "type": "EntireHotelInfoFetcherAction",
        "error": "break",
        "context": {
          "houseId": "$AIRHOST_HOTEL_ID$"
        }
      },
      {
        "id": "LoginGTJ",
        "showName": "登录谷町君旅馆管理系统",
        "type": "UserPassCodeLoginAction",
        "error": "break",
        "context": {
          "username": "$GTJ_MANAGE_USERNAME$",
          "password": "$GTJ_MANAGE_PASSCODE$"
        }
      },
      {
        "id": "WriteData",
        "showName": "将数据写入谷町君",
        "type": "PostRestServiceAction",
        "error": "break",
        "context": {
          "url": "https://test.admin.gutingjun.com/api/hotel/pms/page",
          "inputData": "$GETOUTPUTDATA(JobActionNode[FetchHouseData])$"
        }
      }
    ],
    "linkers": [
      {
        "id": "Entry",
        "from": null,
        "to": "LogInAirHost",
        "showName": "无条件开始",
        "rule": {
          "EQ": {
            "left": true,
            "right": true
          }
        }
      },
      {
        "id": "LogInAirHostSuccess",
        "from": "LogInAirHost",
        "to": "FetchHouseData",
        "showName": "登录AirHost成功后获取房源数据",
        "rule": {
          "EQ": {
            "left": true,
            "right": "$GETLASTOUTPUTDATA$"
          }
        }
      },
      {
        "id": "AirHostDataFetched",
        "from": "FetchHouseData",
        "to": "LoginGTJ",
        "showName": "取房源数据后登入谷町君",
        "rule": {
          "EQ": {
            "left": true,
            "right": "$GETLASTEXECUTERESULT$"
          }
        }
      },
      {
        "id": "LoginGTJSuccess",
        "from": "LoginGTJ",
        "to": "WriteData",
        "showName": "登录谷町君后写入数据",
        "rule": {
          "EQ": {
            "left": true,
            "right": "$GETLASTOUTPUTDATA$"
          }
        }
      }
    ]
  }
}